{% extends 'base.html.twig' %}

{% block title %}
    Child Page Title {{ name }}
{% endblock %}

{% block body %}
    <div class="grid gap-5 lg:gap-7.5">
        <!-- begin: grid -->
        <div class="grid lg:grid-cols-5 gap-5 lg:gap-7.5 items-stretch">
            <div class="lg:col-span-2">
                <div class="card h-full bg-success-light">
                    <div class="card-body flex flex-col place-content-center gap-5">
                        <div class="flex justify-center">
                            <img alt="image" class="dark:hidden max-h-[180px]"
                                 src="{{ asset('metronic/media/illustrations/32.svg') }}"/>
                            <img alt="image" class="light:hidden max-h-[180px]"
                                 src="{{ asset('metronic/media/illustrations/32-dark.svg') }}"/>
                        </div>
                        <div class="flex flex-col gap-4">
                            <div class="flex flex-col gap-3 text-center">
                                <h2 class="text-1.5xl font-semibold text-gray-900">
                                    Partagez vos connaissances
                                </h2>
                                <p class="text-sm font-medium text-gray-700">
                                    Vous venez de commencer ou de terminer une lecture ?
                                    <br/>
                                    Faites découvrir les points essentiels à la communauté !
                                </p>
                            </div>
                            <div class="flex justify-center">
                                <a class="btn btn-dark" href="#" data-modal-toggle="#book_modal" onclick="resetBook();">
                                    Ajouter une lecture
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="lg:col-span-3">
                {% include 'components/home/booksReading.html.twig' %}
            </div>
        </div>
        <!-- end: grid -->
        <!-- begin: grid -->
        <div class="grid lg:grid-cols-5 gap-5 lg:gap-7.5 items-stretch">
            <div class="lg:col-span-3">
                <div class="grid">
                    {% include 'components/home/booksRead.html.twig' %}
                </div>
            </div>
            <div class="lg:col-span-2">
                {% include 'components/home/radarChart.html.twig' %}
            </div>
        </div>
        <!-- end: grid -->
        <script>
            function showBook(bookId){

                fetch('get-bookReading', {
                    method: 'POST',
                    body: JSON.stringify({ bookId: bookId }),
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                })
                .then(response => response.json())
                .then(data => {
                    let response = data[0];
                    document.getElementById("idBookReading").value = response["id"];
                    document.getElementById("book").value = response["bookId"];
                    document.getElementById("descriptionBook").value = response["desc"];
                    document.getElementById("rating").value = parseInt(response["note"]);
                    document.getElementById("finished").checked = response["checked"];

                    const modalEl = document.querySelector('#book_modal');
                    const modal = KTModal.getInstance(modalEl);
                    modal.show();
                })
                .catch(error => console.log('Erreur:', error));
            }
            function resetBook(){
                document.getElementById("idBookReading").value = "";
                document.getElementById("book").value = 1;
                document.getElementById("descriptionBook").value = "";
                document.getElementById("rating").value = 1;
                document.getElementById("finished").checked = false;
            }
        </script>
    </div>
{% endblock %}